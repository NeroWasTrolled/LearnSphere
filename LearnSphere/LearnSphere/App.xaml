<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LearnSphere.Converters"
             x:Class="LearnSphere.App">
    <Application.Resources>
        <ResourceDictionary>
            <local:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter"/>
            <Style x:Key="ToolbarButtonStyle" TargetType="ToolbarItem">
                <Setter Property="IconImageSource" Value="pesquisar.png"/>
                <Setter Property="Order" Value="Primary"/>
                <Setter Property="Priority" Value="0"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
