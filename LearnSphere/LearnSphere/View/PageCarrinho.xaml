<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearnSphere.View.PageCarrinho"
             Title="Carrinho">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="carrinhoListView"
                      Margin="15"
                      IsVisible="False"
                      RowHeight="120"
                      SeparatorColor="Black">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame CornerRadius="10"
                                   Margin="4"
                                   Padding="5"
                                   BackgroundColor="#FFFFFF">
                                <StackLayout Orientation="Horizontal"
                                             Spacing="10">
                                    <Image Source="{Binding foto,Converter={StaticResource ByteArrayToImageSourceConverter}}"
                                           Aspect="AspectFill"
                                           WidthRequest="100"
                                           HeightRequest="100"/>
                                    <StackLayout Orientation="Vertical"
                                                 Spacing="5">
                                        <Label Text="{Binding titulo}"
                                               FontAttributes="Bold"
                                               FontSize="18"
                                               TextColor="#000000" />
                                        <Label Text="{Binding desc_secundaria}"
                                               LineBreakMode="TailTruncation"
                                               FontSize="14"
                                               TextColor="#666666" />
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label x:Name="lblSemCursos"
                   Text="Seu carrinho está vazio."
                   IsVisible="False"
                   TextColor="Black"
                   FontSize="16"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"/>
            <Button x:Name="btnComprarTudo"
                    Text="Comprar Tudo"
                    Clicked="OnComprarTudoClicked"
                    IsVisible="False"
                    HorizontalOptions="Center"
                    VerticalOptions="EndAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
